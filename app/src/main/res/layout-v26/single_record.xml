<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/r_date"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="Date"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/r_meal"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="Meal"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:layout_toRightOf="@id/r_date"/>

        <TextView
            android:id="@+id/r_Food"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="Food"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:layout_toRightOf="@id/r_meal"/>
        <TextView
            android:id="@+id/r_amount"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:text="Amount"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:layout_toRightOf="@id/r_Food"/>

        <ImageButton
            android:id="@+id/r_delete"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_delete"
            android:backgroundTint="@color/white"
            android:layout_toRightOf="@id/r_amount"
            app:tint="@color/red" />


</RelativeLayout>