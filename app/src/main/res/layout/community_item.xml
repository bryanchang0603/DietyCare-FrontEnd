<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_35sdp">
            <ImageView
                android:id="@+id/community_item_img_1"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp" />
            <TextView
                android:id="@+id/community_item_text_1"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp" />
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp">
                <ImageView
                    android:id="@+id/community_item_acc_icon_1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/toux" />
                <TextView
                    android:id="@+id/community_item_username_1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <ImageButton
                    android:id="@+id/community_item_thumb_up_1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_baseline_thumb_up_24" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_35sdp">
            <ImageView
                android:id="@+id/community_item_img_2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp" />
            <TextView
                android:id="@+id/community_item_text_2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp" />
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp">
                <ImageView
                    android:id="@+id/community_item_acc_icon_2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/toux" />
                <TextView
                    android:id="@+id/community_item_username_2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <ImageButton
                    android:id="@+id/community_item_thumb_up_2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/ic_baseline_thumb_up_24" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>