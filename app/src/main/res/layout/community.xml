<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/community_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_165sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/community_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_baseline_search_24" />

            <TextView
                android:id="@+id/community_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Following"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/community_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Others"
                android:textColor="#B6B6B6"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/community_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_follow" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/community_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_344sdp" />
        <LinearLayout
            android:id="@+id/icons_community"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="0sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_btn_home_community"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/menu_btn_community_community"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_community" />

            <ImageButton
                android:id="@+id/menu_btn_meal_community"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_meal" />

            <ImageButton
                android:id="@+id/main_btn_account_community"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_account" />

            <ImageButton
                android:id="@+id/menu_btn_progress_community"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_progress" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/Community_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Community"
        android:textColor="#12274F"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>